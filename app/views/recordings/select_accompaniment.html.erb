<%= render 'layouts/header' %>

<div class="container mx-auto p-4 max-w-2xl mt-8">
  
  <h1 class="text-3xl font-bold mb-6 text-center text-green-900">伴奏ファイルをアップロード</h1>

  <% if notice.present? %>
    <div class="alert alert-success shadow-lg mb-4">
      <div><span><%= notice %></span></div>
    </div>
  <% end %>

  <% if alert.present? %>
    <div class="alert alert-error shadow-lg mb-4">
      <div><span><%= alert %></span></div>
    </div>
  <% end %>

  <%# 現在の録音情報 %>
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      
      <h2 class="card-title text-2xl mb-4">
        <%= @recording.title %>
      </h2>

      <div class="alert alert-info mb-6">
        <div>
          <span>この録音に伴奏ファイルをアップロードすると、タイミング調整ができるようになります。</span>
        </div>
      </div>

      <%# 録音情報 %>
      <div class="bg-gray-50 p-4 rounded-lg mb-6">
        <p class="text-sm text-gray-600 mb-2">
          録音ファイル: 
          <% if @recording.original_audio.attached? %>
            <span class="text-green-600 font-semibold">✓ あり</span>
            <span class="text-xs text-gray-500">(<%= number_to_human_size(@recording.original_audio.byte_size) %>)</span>
          <% else %>
            <span class="text-red-600">✗ なし</span>
          <% end %>
        </p>
        <p class="text-sm text-gray-600">
          伴奏ファイル: 
          <% if @recording.accompaniment.attached? %>
            <span class="text-green-600 font-semibold">✓ <%= @recording.accompaniment.filename %></span>
            <span class="text-xs text-gray-500">(<%= number_to_human_size(@recording.accompaniment.byte_size) %>)</span>
          <% else %>
            <span class="text-orange-600">⚠ 未設定</span>
          <% end %>
        </p>
      </div>

      <%# 伴奏アップロードフォーム %>
      <%= form_with(
        model: @recording, 
        url: update_accompaniment_recording_path(@recording), 
        method: :patch, 
        data: { turbo: false }
      ) do |f| %>
        
        <div class="form-control mb-6">
          <%= f.label :accompaniment, "伴奏ファイルを選択", class: "label" %>
          <label class="label">
            <span class="label-text-alt text-gray-500">対応形式: MP3, WAV, OGG, M4A など</span>
          </label>
          <%= f.file_field :accompaniment, 
              accept: "audio/*", 
              class: "file-input file-input-bordered file-input-primary w-full",
              required: true %>
        </div>

        <div class="card-actions justify-between items-center">
          <%= link_to "キャンセル", mypage_path, class: "btn btn-ghost" %>
          <%= f.submit @recording.accompaniment.attached? ? "伴奏を変更" : "伴奏をアップロード", 
              class: "btn btn-primary", 
              data: { disable_with: "アップロード中..." } %>
        </div>

      <% end %>

    </div>
  </div>

</div>